{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2024",
    "moduleResolution": "NodeNext",                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,     
    "outDir": "./dist",                           
  },
  "include": ["src/**/*"]
}